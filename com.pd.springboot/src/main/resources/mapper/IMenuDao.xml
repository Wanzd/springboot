<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pd.springboot.dao.IMenuDao">
	<select id="queryList" resultType="com.pd.businessobject.MenuBO">
select t.parent_id as "parentId",
	t.id as "id",
	t.cn "cn"
from sys_menu_t t
		<where>
			<if test='fo.parentId==null and fo.id==null'>and t.parent_id is null</if>
			<if test='fo.parentId!=null and fo.parentId!=""'>and t.parent_id =#{fo.parentId}</if>
			<if test='fo.id!=null and fo.id!=""'>and t.id=#{fo.id}</if>
		</where>
order by t.index_id
	</select>
</mapper>